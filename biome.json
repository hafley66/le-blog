{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"include": ["./**/*"]
	},
	"organizeImports": { "enabled": false },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noUselessConstructor": "off",
				"noForEach": "off",
				"useLiteralKeys": "off",
				"useArrowFunction": "off"
			},
			"style": {
				"useNodejsImportProtocol": "off",
				"useImportType": "off",
				"noCommaOperator": "off",
				"noNonNullAssertion": "info",
				"useConst": "info",
				"noUnusedTemplateLiteral": "off",
				"useTemplate": "info"
			},
			"suspicious": {
				"noAssignInExpressions": "warn",
				"noExplicitAny": "warn",
				"noFallthroughSwitchClause": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "double",
			"arrowParentheses": "asNeeded",
			"semicolons": "asNeeded",
			"indentStyle": "space",
			"indentWidth": 2,
			"lineWidth": 60
		}
	}
}
