{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM", "deno.ns"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.mts", "**/*.deno.mts", "**/*.dual.mts"]
}
